pipeline{
    agent any

    stages{
        stage('install-env'){
            agent{docker{image 'node:14'}}
            steps{
                sh 'apt update'
                sh 'apt install sudo -y'
                sh 'sudo chown -R 995:993 "/.npm"'
                sh 'npm install'
            }
            post{
                success{
                    echo "Successful intall npm"
                }
                failure{
                    echo "Fail install nmp"
                }
            }
        }
    }
}
