pipeline{
    agent{
        docker{image 'node:14'
                args '-u root:sudo'
            }
    }

    stages{
        stage('install-env'){
            
            steps{
                //sh 'sudo chown -R 995:993 "/.npm"'
                sh 'npm install'
            }
            post{
                success{
                    echo "Successful intall npm"
                }
                failure{
                    echo "Fail install nmp"
                }
            }
        }
        stage('package'){
            steps{
                sh 'npm pack'
            }
            post{
                success{
                    echo 'Successful package'
                }
                failure{
                    echo 'fail package'
                }
            }
        }
        stage('upload'){
            steps{
                sh 'curl -uadmin:APBZrJk8pn85wcNmx47z1AoGCFp -T \
                *.tgz \
                "http://ec2-54-242-175-136.compute-1.amazonaws.com:8081/artifactory/utc-nodejs/utc-app${BUILD_ID}.tgz"'
            }
        }
    }
}
